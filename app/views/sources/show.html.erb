<h1><%= link_to @source.title, url_with_protocol(@source.url), target: "_blank" %></h1>

<%= form_for [@source, @comment] do |f| %>
  <%= f.text_area :body, class: 'comment-body' %>
  <%= f.submit class: 'create-comment-button' %>
<% end %>

<ul id='comment-list'>
  <% @associated_comments.each do |comment| %>
    <li><%= comment.body %></li>
  <% end %>
</ul>